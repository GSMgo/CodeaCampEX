<div class="session">
  <% if @username %>
    <form id="logout" action="/logout" method="POST">
      <a><%= @username %></a>
      <input type="submit" value="Logout">
    </form>
  <% end %>
</div>
<div class="content">
  <form id="search" action="/fetch" method="POST">
    <input type="submit" value="Search"> 
    <input type="text" name="twitter_handle" placeholder="Search Tweets">
  </form>
  <form id="create_tweet">
    <input type="text" name="tweet_text" style="width: 300px;">
    <input type="submit" value="Tweet!">
  </form>

  <div class="content_list" id="tweets">
  </div>  
</div>